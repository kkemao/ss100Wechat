/**index.wxss**/
.article-card {
    /* min-height: 250rpx; */
    background: #f9f9f9;
    margin-bottom: 15rpx;
    box-sizing: border-box;
    padding: 15rpx;
    overflow: hidden;
}

.article-card-image {
    width: 100%;
    max-height: 250rpx;
    border-radius: 15rpx;
}

.article-card-title {
    color: #333;
    font-size: 32rpx;
    padding: 10rpx 15rpx;
}

.article-card-sketch {
    color: #666;
    font-size: 26rpx;
    padding: 10rpx 15rpx;
    box-sizing: border-box;
}

.article-card-other {
    color: #999;
    font-size: 24rpx;
    padding: 20rpx 10rpx 15rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}
.article-card-auth{
    display: flex;
    background: #cacaca;
    color: white;
    padding: 5rpx 12rpx;
    border-radius: 5rpx;
    margin-right: 15rpx;
}