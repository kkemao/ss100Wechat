.home-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(238, 238, 238, 0.63);
  position: absolute;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  padding: 15rpx 5%;
  box-sizing: border-box;
}

.article-title {
  color: #333;
  font-size: 32rpx;
  padding: 10rpx 15rpx;
  width: 100%;
  margin-bottom: 25rpx;
}

.article-sketch {
  color: rgb(121, 98, 98);
  font-size: 26rpx;
  padding: 10rpx 15rpx;
  background: #eee;
  font-weight: 300;
  border-radius: 15rpx;
  width: 100%;
  box-sizing: border-box;
}
.article-cover-box{
  width: 100%;
  height: auto;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.article-cover{
  max-height: 200rpx;
}

.article-other {
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 10rpx 15rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
}

.article-auth {
  display: flex;
  background: #cacaca;
  color: white;
  padding: 5rpx 12rpx;
  border-radius: 5rpx;
  margin-right: 15rpx;
}

.article-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}

.article-text {
  display: flex;
  width: 100%;
  text-align: left;
  color: #333;
  font-weight: 300;
  font-size: 28rpx;
  margin: 15rpx 0;
  letter-spacing: 2rpx;
  line-height: 42rpx;
}

.article-content-image {
  width: 100%;
  max-height: 480rpx;
  margin: 10rpx 0;
}