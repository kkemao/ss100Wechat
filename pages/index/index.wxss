.home-container {
  width: 100%;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}

.home-panel {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 250px;
  background: linear-gradient(to bottom, rgb(49, 62, 230), rgba(49, 62, 230, 0.7));
}

.radar-box {
  width: 100%;
  height: 100%;
}

.panel-center-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  color: #fff;
  font-size: 56rpx;
  letter-spacing: 10rpx;
  text-indent: 10rpx;
  font-weight: 600;
}

.panel-center-box-text {
  font-size: 18rpx;
  font-weight: 300;
  letter-spacing: 1rpx;
  text-indent: 1rpx;
}

.panel-shadow {
  position: absolute;
  width: 350px;
  height: 350px;
  border-radius: 50%;
  background: radial-gradient(rgba(255, 255, 255, 0) 60%, rgba(255, 255, 255, 0.1) 100%);
}

.test-rocket {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ccc;
  animation: shamer 2s linear infinite;
}

.getphone-button {
  opacity: 0;
  background: #fffdfd;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.test-rocket .test-text {
  margin-bottom: 5rpx;
  font-size: 16rpx;
  border: 1px solid rgb(49, 62, 230);
  padding: 3rpx 10rpx;
  text-align: center;
  box-sizing: border-box;
  border-radius: 13rpx;
  background: rgb(49, 62, 230);
}

.test-rocket image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  filter: invert(1);
}
.avatar-box{
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 10;
  border-radius: 50%;
  overflow: hidden;
}
.avatar-box-image{
  width: 100%;
  height: 100%;
}

@keyframes shamer {
  0% {
    opacity: 1;
    transform: scale(1);
  }

  50% {
    opacity: 0.5;
    transform: scale(1.1);
  }

  100% {
    opacity: 1;
    transform: scale(1);
  }
}