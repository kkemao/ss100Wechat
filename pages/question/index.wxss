.home-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(238, 238, 238, 0.63);
  position: absolute;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  padding: 15rpx 5%;
  box-sizing: border-box;
}

.score-icon-box {
  width: 100%;
  height: 54rpx;
  position: relative;
  left: -35rpx;
  margin-top: 30rpx;
}

.question-score-icon {
  width: 68rpx;
  height: 42rpx;
  position: relative;
  left: 0rpx;
  transition: left .3s ease-in-out;
}

.question-score-progress {
  width: 100%;
  height: 12rpx;
  background: #ddd;
  border-radius: 6rpx;
  position: relative;
  margin: 10rpx 0;
  overflow: hidden;
}

.question-score-current-progress {
  background-color: #1784fc;
  height: 100%;
  width: 0%;
  position: relative;
  display: flex;
  transition: width .3s ease;
  border-radius: 6rpx;
}

.question-score-current-progress::after {
  content: '';
  display: flex;
  width: 9rpx;
  height: 9rpx;
  background-color: #1784fc;
  border: 3rpx solid yellow;
  border-radius: 6rpx;
  position: absolute;
  right: 0px;
}

.question-score-text {
  width: 100%;
  font-size: 28rpx;
  padding: 12rpx 5rpx;
  box-sizing: border-box;
  color: #333;
}

.question-title {
  width: 100%;
  margin-top: 24rpx;
  font-weight: 400;
}

.question-title-head {
  display: inline;
  font-weight: 600;
}

.question-cover-box {
  width: 100%;
  height: auto;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.question-cover {
  max-height: 200rpx;
}

.question-answer-group {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 15rpx 0;
}

.question-answer-group-label {
  display: flex;
  padding: 15rpx 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  font-weight: 300;
  color: #333;
}

.question-answer-group-label.checked {
  color: green;
}

.question-answer-group-checkbox {
  display: flex;
  margin-right: 15rpx;
}

.question-control-button-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  border-top: 1px solid #eee;
  padding-top: 30rpx;
}

.question-next-button {
  margin: 0 30rpx;
}